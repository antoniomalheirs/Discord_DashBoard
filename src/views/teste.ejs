<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica', sans-serif;
        }

        .bg-discord-dark {
            background-color: #36393f;
        }

        .bg-discord-light {
            background-color: #40444b;
        }

        .text-discord {
            color: #fff;
        }

        .border-discord-dark {
            border-color: #2f3136;
        }

        .border-discord-light {
            border-color: #4f545c;
        }

        .channel-bar {
            width: 240px;
            height: 100vh;
        }

        .channel-block {
            padding: 16px;
        }

        .channel-block-text {
            color: #fff;
            font-size: 1.2rem;
        }

        .dropdown {
            margin-bottom: 10px;
            border-width: 1px;
            border-style: solid;
            border-radius: 4px;
            overflow: hidden;
        }

        .dropdown-header {
            display: flex;
            align-items: center;
            padding: 10px;
            cursor: pointer;
        }

        .dropdown-header-text {
            margin-left: 10px;
        }

        .dropdown-content {
            padding: 10px;
            background-color: #36393f;
            border-top: 1px solid #2f3136;
        }

        .dropdown-selection {
            display: flex;
            align-items: center;
            padding: 8px;
            cursor: pointer;
        }

        .dropdown-selection-text {
            margin-left: 10px;
        }

        .dropdown-selection:hover {
            background-color: #40444b;
        }
    </style>
</head>
<body class="bg-discord-dark text-discord w-64">
    <div class="channel-bar shadow-lg bg-discord-dark">
        <div class="channel-block">
            <h5 class="channel-block-text">Channels</h5>
        </div>
        <div class="channel-container">
            <div class="dropdown border-discord-light" onclick="toggleDropdown('topics')">
                <div class="dropdown-header">
                    <i id="topics-chevron" class="fas fa-chevron-down text-gray-400"></i>
                    <h5 id="topics-header" class="dropdown-header-text">Topics</h5>
                    <i class="text-accent text-opacity-80 my-auto ml-auto">+</i>
                </div>
                <div id="topics-dropdown" class="dropdown-content hidden">
                    <div class="dropdown-selection" onclick="selectTopic('tailwind-css')">
                        <i class="fas fa-hashtag text-gray-400"></i>
                        <h5 class="dropdown-selection-text">tailwind-css</h5>
                    </div>
                    <div class="dropdown-selection" onclick="selectTopic('react')">
                        <i class="fas fa-hashtag text-gray-400"></i>
                        <h5 class="dropdown-selection-text">react</h5>
                    </div>
                </div>
            </div>

            <!-- Adicione mais dropdowns conforme necessário -->

        </div>

        <!-- Adicione o link para o kit do Font Awesome -->
        <script src="https://kit.fontawesome.com/your-fontawesome-kit-id.js" crossorigin="anonymous"></script>
        <script>
            function toggleDropdown(type) {
                const chevron = document.getElementById(`${type}-chevron`);
                const dropdown = document.getElementById(`${type}-dropdown`);

                dropdown.classList.toggle('hidden');
                chevron.className = dropdown.classList.contains('hidden') ? 'fas fa-chevron-right text-gray-400' : 'fas fa-chevron-down text-gray-400';
            }

            function selectTopic(topic) {
                console.log(`Selected topic: ${topic}`);
                // Adicione lógica adicional conforme necessário
            }
        </script>
    </div>
</body>
</html>
