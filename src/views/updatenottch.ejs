<!-- guildcontentmain.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <title>Discord Bot Dashboard</title>
  </head>
  <body class="bg-yellow-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg">
      <% if (info.icon && info.icon.indexOf('null') === -1) { %>
      <p class="flex items-center justify-center">
        <img
          src="<%= info.icon %>"
          alt="Ícone da guilda"
          class="mx-auto my-auto rounded-lg max-w-full h-auto mb-4"
        />
      </p>
      <% } else { %>
      <!-- Substitua "caminho/para/sua/imagem.png" pelo caminho real da sua imagem padrão -->
      <p>
        <img
          src="/res/serverIcon/nonserverimg.jpg"
          alt="Ícone padrão"
          class="mx-auto my-auto rounded-lg max-w-full h-auto mb-4"
        />
      </p>
      <% } %>

      <h1 class="text-3xl font-bold mb-4 text-center">
        Guilda <%= info.name %>
      </h1>

      <p class="text-gray-700 text-center">ID da Guilda: <%= info.id %></p>
      <p class="text-gray-700 text-center">
        Número de Membros: <%= info.memberCount %>
      </p>

      

      <form id="channelytb" action="/seu-endereco-de-envio" method="POST">
        <div class="flex flex-col justify-center mt-4">
          <label for="numero" class="block text-sm font-medium text-gray-600 mb-2">Número:</label>
          <input
            type="number"
            id="numero"
            name="numero"
            class="p-2 border rounded-md focus:outline-none focus:border-blue-500"
            placeholder="Digite um número"
          />
        </div>
      
        <div class="flex justify-center mt-4">
          <button
            type="button" <!-- Mudamos de 'submit' para 'button' para evitar envio automático do formulário 
            class="bg-blue-500 text-white py-2 px-4 rounded-md focus:outline-none hover:bg-blue-600"
            onclick="enviarDados()"
          >
            Enviar Dados
          </button>
        </div>
      </form>
      <div class="flex justify-center mt-4 ">
        <a href="/dashboard">
          <button
            class="bg-green-400 text-white px-2 py-1 rounded-md hover:bg-purple-300 focus:outline-none focus:ring focus:border-blue-300"
          >
            Voltar ao Dashboard
          </button>
        </a>
      </div>
    </div>
  </body>
</html>
