<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="../css/cssdir/out.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>Gerenciador de Funções - Twitch</title>
</head>

<body class="bg-transparent min-h-full flex items-start justify-center pt-10">

  <div
    class="bg-gray-800/80 backdrop-blur-md border border-gray-700 p-8 rounded-2xl shadow-2xl w-full max-w-full animate-fade-in-up">
    <div id="mensagemPopUp"
      class="hidden fixed top-5 right-5 z-50 transition-all duration-300 transform translate-y-[-10px] opacity-0"></div>

    <!-- Header -->
    <div class="flex items-center gap-6 mb-8 border-b border-gray-700/50 pb-6">
      <div class="relative group">
        <div
          class="absolute -inset-1 bg-purple-600 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>
        <% if (info.icon && info.icon.indexOf('null')===-1) { %>
          <img src="<%= info.icon %>" alt="Ícone da guilda"
            class="relative w-20 h-20 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
          <% } else { %>
            <img src="/res/serverIcon/nonserverimg.jpg" alt="Ícone padrão"
              class="relative w-20 h-20 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
            <% } %>
      </div>
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-white mb-2 flex items-center gap-3">
          <i class="fa-brands fa-twitch text-purple-500"></i>
          Monitoramento Twitch
        </h3>
        <p class="text-gray-400 text-sm max-w-2xl">Gerencie os streamers seguidos e configure notificações automáticas
          de lives em seu servidor.</p>
      </div>
      <div>
        <% if (info5 && info5.twitchnotify) { %>
          <button onclick="desativarModulo()"
            class="flex items-center gap-2 bg-gradient-to-r from-gray-600 to-gray-500 hover:from-gray-500 hover:to-gray-400 text-white font-semibold py-2.5 px-6 rounded-lg shadow-lg hover:shadow-gray-500/20 transition-all duration-200 transform hover:-translate-y-0.5">
            <i class="fa-solid fa-power-off"></i>
            <span>Desativar Módulo</span>
          </button>
          <% } else { %>
            <button onclick="abrirModal()"
              class="flex items-center gap-2 bg-gradient-to-r from-purple-600 to-purple-500 hover:from-purple-500 hover:to-purple-400 text-white font-semibold py-2.5 px-6 rounded-lg shadow-lg hover:shadow-purple-500/20 transition-all duration-200 transform hover:-translate-y-0.5">
              <i class="fa-solid fa-power-off"></i>
              <span>Ativar Módulo</span>
            </button>
            <% } %>
      </div>
    </div>

    <!-- Table Container -->
    <div class="overflow-hidden rounded-xl border border-gray-700/50 bg-gray-800/40">
      <table class="min-w-full divide-y divide-gray-700">
        <thead class="bg-gray-700/50">
          <tr>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Twitch
              ID</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Nome do
              Canal</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">
              Servidor ID</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-700/50">
          <% info3.forEach(item=> { %>
            <tr class="hover:bg-gray-700/30 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-indigo-400">
                <%= item.twitch %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white flex items-center gap-2">
                <i class="fa-brands fa-twitch text-purple-500"></i>
                <%= item.channel %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300 font-mono">
                <%= item.guildID %>
              </td>
            </tr>
            <% }); %>

              <% if (info3.length===0) { %>
                <tr>
                  <td colspan="3" class="px-6 py-10 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                      <i class="fa-solid fa-inbox text-4xl mb-3 opacity-50"></i>
                      <p>Nenhum streamer configurado ainda.</p>
                    </div>
                  </td>
                </tr>
                <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal Moved Outside to Fix Transform Context -->
  <div id="modal" class="hidden fixed inset-0 z-[9999] overflow-y-auto" aria-labelledby="modal-title" role="dialog"
    aria-modal="true">
    <div class="flex items-center justify-center min-h-screen px-4">
      <!-- Backdrop -->
      <div class="fixed inset-0 bg-gray-900/80 transition-opacity backdrop-blur-sm" aria-hidden="true"
        onclick="fecharModal()"></div>

      <!-- Modal Panel -->
      <div class="relative w-full max-w-lg bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 p-6 z-50">

        <div class="mb-6">
          <h3 class="text-xl leading-6 font-bold text-white mb-4 flex items-center gap-2" id="modal-title">
            <i class="fa-brands fa-twitch text-purple-500"></i>
            Ativar Monitoramento
          </h3>
          <div class="bg-purple-500/10 border border-purple-500/20 rounded-lg p-3 text-purple-200 text-sm">
            <i class="fa-solid fa-circle-info mr-2"></i>
            Esta ação ativará o sistema de notificações e definirá o canal de anúncios.
          </div>
        </div>

        <form id="addDataForm" method="post" class="space-y-4">
          <div class="flex items-center bg-gray-700/50 p-3 rounded-lg border border-gray-600">
            <input type="checkbox" id="tch" name="tch"
              class="h-5 w-5 rounded bg-gray-700 border-gray-500 text-purple-600 focus:ring-purple-500 focus:ring-offset-gray-800 transition py-4"
              required />
            <label for="tch" class="ml-3 block text-sm font-medium text-gray-200 cursor-pointer">
              Confirmar ativação do módulo
            </label>
          </div>

          <div>
            <label for="channelId" class="block text-sm font-medium text-gray-400 mb-1">ID do Canal de Texto
              (Discord):</label>
            <input type="text" id="channelId" name="channelId" placeholder="Ex: 123456789012345678"
              class="w-full bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 placeholder-gray-500"
              required />
            <p class="mt-1 text-xs text-gray-500">O ID do canal onde os alertas serão enviados.</p>
          </div>

          <input type="hidden" id="guildId" name="guildId" value="<%= info.id %>" />
          <input type="hidden" id="func" name="func" value="acttwitch" />
        </form>

        <div class="mt-6 flex flex-row-reverse gap-3">
          <button type="button" onclick="envdata()"
            class="w-full inline-flex justify-center rounded-lg border border-transparent shadow-sm px-4 py-2 bg-purple-600 text-base font-medium text-white hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 sm:w-auto sm:text-sm transition-colors">
            Confirmar
          </button>
          <button type="button" onclick="fecharModal()"
            class="w-full inline-flex justify-center rounded-lg border border-gray-600 shadow-sm px-4 py-2 bg-gray-800 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:w-auto sm:text-sm transition-colors">
            Cancelar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    function abrirModal() {
      const modal = document.getElementById("modal");
      modal.classList.remove("hidden");
    }

    function fecharModal() {
      document.getElementById("modal").classList.add("hidden");
    }

    function exibirMensagemErro(mensagem) {
      const popUp = document.getElementById('mensagemPopUp');

      popUp.innerHTML = `
          <div class="flex items-center bg-red-500/90 text-white px-4 py-3 rounded-lg shadow-lg border border-red-400 backdrop-blur-sm">
            <i class="fas fa-exclamation-circle mr-3"></i>
            <p class="font-medium text-sm">${mensagem}</p>
          </div>
        `;

      popUp.classList.remove('hidden', 'translate-y-[-10px]', 'opacity-0');

      setTimeout(() => {
        popUp.classList.add('translate-y-[-10px]', 'opacity-0');
        setTimeout(() => popUp.classList.add('hidden'), 300);
      }, 3000);
    }

    function desativarModulo() {
      if (!confirm("Tem certeza que deseja desativar o monitoramento da Twitch?")) return;

      const dados = [
        { name: "guildId", value: "<%= info.id %>" },
        { name: "func", value: "deacttwitch" },
        { name: "channelId", value: "0" } // Dummy value
      ];

      if (parent && typeof parent.funcsReload === 'function') {
        parent.funcsReload(dados);
      }
    }

    function envdata() {
      var form = document.getElementById('addDataForm');

      if (!form.checkValidity()) {
        exibirMensagemErro('Por favor, preencha todos os campos obrigatórios.');
        return;
      }

      var dadosFormulario = $("#addDataForm").serializeArray();

      fecharModal();
      if (parent && typeof parent.funcsReload === 'function') {
        parent.funcsReload(dadosFormulario);
      } else {
        console.error("Function parent.funcsReload not found");
      }
    }
  </script>
</body>

</html>