<!-- botstatus.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="../css/cssdir/out.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>Discord Bot Dashboard</title>
</head>

<body class="bg-transparent min-h-screen flex items-start justify-center pt-10">
  <div
    class="bg-gray-800/80 backdrop-blur-md border border-gray-700 p-8 rounded-2xl shadow-2xl w-full max-w-full animate-fade-in-up">

    <div class="flex items-center gap-6 mb-8">
      <div class="relative">
        <div
          class="absolute -inset-1 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>
        <img src="/res/serverIcon/boticon.jpg" alt="Bot Icon"
          class="relative w-24 h-24 rounded-lg object-cover shadow-lg ring-2 ring-gray-700 border-2 border-yellow-500/50" />
      </div>
      <div>
        <h3 class="text-2xl font-bold text-white mb-1">Manager Bot Status</h3>
        <p class="text-yellow-500 font-medium text-sm flex items-center gap-2">
          <i class="fa-solid fa-bolt"></i>
          Monitoramento em Tempo Real
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6">

      <!-- Service Status -->
      <div
        class="group bg-gray-700/50 p-5 rounded-xl border border-gray-600/50 hover:bg-gray-700 hover:border-yellow-500/50 transition-all duration-300">
        <div class="flex items-center justify-between mb-2">
          <dt class="text-xs font-bold text-gray-400 uppercase tracking-widest">Status do Servi√ßo</dt>
          <i class="fa-solid fa-signal text-green-500 animate-pulse"></i>
        </div>
        <dd class="text-white font-bold text-xl capitalize">
          <%= info.botStatus %>
        </dd>
      </div>

      <!-- Total Servers -->
      <div
        class="group bg-gray-700/50 p-5 rounded-xl border border-gray-600/50 hover:bg-gray-700 hover:border-blue-500/50 transition-all duration-300">
        <div class="flex items-center justify-between mb-2">
          <dt class="text-xs font-bold text-gray-400 uppercase tracking-widest">Servidores Conectados</dt>
          <i class="fa-solid fa-earth-americas text-blue-500"></i>
        </div>
        <dd class="text-white font-bold text-3xl font-mono">
          <%= info.guildCount %>
        </dd>
      </div>

      <!-- Uptime -->
      <div
        class="group bg-gray-700/50 p-5 rounded-xl border border-gray-600/50 hover:bg-gray-700 hover:border-purple-500/50 transition-all duration-300">
        <div class="flex items-center justify-between mb-2">
          <dt class="text-xs font-bold text-gray-400 uppercase tracking-widest">Tempo de Atividade</dt>
          <i class="fa-solid fa-clock text-purple-500"></i>
        </div>
        <div class="w-full bg-gray-600/50 rounded-full h-1.5 mb-3 mt-1">
          <div class="bg-gradient-to-r from-purple-500 to-pink-500 h-1.5 rounded-full" style="width: 100%"></div>
        </div>
        <dd class="text-white font-medium text-lg font-mono">
          <%= info.uptime %>
        </dd>
      </div>

    </div>
  </div>
</body>

</html>