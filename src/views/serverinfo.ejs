<!-- guildcontentmain.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../css/cssdir/out.css" rel="stylesheet">
    <style>
      
    </style>
  </head>
  <body class=" min-h-screen flex items-center justify-center">
    <div class="pages_cont p-8 rounded-lg shadow-md w-full h-full max-w-lg">
        <div class="flex items-center gap-5 px-4 sm:px-0">
            <div class="flex-shrink-0"> <% if (info.icon && info.icon.indexOf('null') === -1) { %>
                <img src="<%= info.icon %>" alt="Ícone da guilda" class="w-24 h-24 rounded-lg object-cover"/>
              <% } else { %>
                <img src="/res/serverIcon/nonserverimg.jpg" alt="Ícone padrão" class="w-24 h-24 rounded-lg object-cover" />
              <% } %>
            </div>

            <div>
              <h3 class="text-base/7 font-semibold text-white">Informações do Servidor</h3>
              <p class="mt-1 max-w-2xl text-sm/6 text-gray-400">Dados do Servidor e Configurações</p>
            </div>
        </div>
        <div class="mt-6 border-t border-white/10">
          <dl class="divide-y divide-white/10">
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
              <dt class="text-sm/6 font-medium text-gray-100">Nome do Servidor</dt>
              <dd class="mt-1 text-sm/6 sm:col-span-2 text-gray-400 sm:mt-0"><%= info.name %></dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-2 sm:px-0">
              <dt class="text-sm/6 sm:col-span-2 font-medium text-gray-100">Gerenciando atualmente</dt>
              <dd class="mt-1 text-sm/6 text-gray-400 sm:mt-0"><%= info.id %></dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-2 sm:px-0">
              <dt class="text-sm/6 sm:col-span-2 font-medium text-gray-100">Total de Membros</dt>
              <dd class="mt-1 text-sm/6 text-gray-400 sm:mt-0"><%= info.memberCount %></dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-2 sm:px-0">
              <dt class="text-sm/6 font-medium sm:col-span-2 text-gray-100">Total de Canais de Voz</dt>
              <dd class="mt-1 text-sm/6 text-gray-400  sm:mt-0"><%= info.voiceChannels %></dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-4 sm:px-0">
              <dt class="text-sm/6 sm:col-span-2 font-medium text-gray-100">Total de Canis de Texto</dt>
              <dd class="mt-1 text-sm/6 text-gray-400 sm:mt-0"><%= info.textChannels %></dd>
            </div>
          </dl>
        </div>
      </div>
    <div>
  </body>
</html>
