<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard: <%= info.name %>
  </title>
  <link href="../css/cssdir/out.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-transparent min-h-full flex items-start justify-center pt-10">

  <div
    class="bg-gray-800/80 backdrop-blur-md border border-gray-700 p-8 rounded-2xl shadow-2xl w-full max-w-full animate-fade-in-up">
    <div id="mensagemPopUp"
      class="hidden fixed top-5 right-5 z-50 transition-all duration-300 transform translate-y-[-10px] opacity-0"></div>

    <!-- Header -->
    <div class="flex items-center gap-6 mb-8 border-b border-gray-700/50 pb-6">
      <div class="relative group">
        <div
          class="absolute -inset-1 bg-red-600 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>
        <% if (info.icon && info.icon.indexOf('null')===-1) { %>
          <img src="<%= info.icon %>" alt="Ícone da guilda"
            class="relative w-20 h-20 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
          <% } else { %>
            <img src="/res/serverIcon/nonserverimg.jpg" alt="Ícone padrão"
              class="relative w-20 h-20 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
            <% } %>
      </div>
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-white mb-2 flex items-center gap-3">
          <i class="fa-solid fa-gear text-gray-400"></i>
          Configuração Geral (YouTube)
        </h3>
        <p class="text-gray-400 text-sm max-w-2xl">Defina o canal padrão onde as notificações de novos vídeos serão
          postadas.</p>
      </div>
    </div>

    <!-- Config Card -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

      <!-- Current Status -->
      <div class="md:col-span-1 space-y-4">
        <div class="bg-gray-700/40 border border-gray-600/50 rounded-xl p-6">
          <h4 class="text-gray-300 font-bold mb-4 flex items-center gap-2">
            <i class="fa-solid fa-signal text-gray-500"></i> Estado Atual
          </h4>

          <div class="flex justify-between items-center mb-3">
            <span class="text-sm text-gray-400">Módulo YouTube</span>
            <span
              class="px-2 py-1 rounded text-xs font-bold <%= info5.youtubenotify ? 'bg-green-500/20 text-green-400 border border-green-500/30' : 'bg-red-500/20 text-red-400 border border-red-500/30' %>">
              <%= info5.youtubenotify ? 'ATIVO' : 'INATIVO' %>
            </span>
          </div>

          <div class="mb-2">
            <span class="text-sm text-gray-400 block mb-1">Canal Vinculado</span>
            <div class="bg-gray-900/50 p-2 rounded border border-gray-700 font-mono text-indigo-400 text-sm break-all">
              <i class="fa-solid fa-hashtag mr-1"></i>
              <%= channelytb %>
            </div>
            <p class="text-xs text-gray-600 mt-1 font-mono">ID: <%= info5.channelytb %>
            </p>
          </div>
        </div>
      </div>

      <!-- Edit Form -->
      <div class="md:col-span-2">
        <div class="bg-gray-700/20 border border-gray-600/30 rounded-xl p-6">
          <h4 class="text-white font-bold mb-4 flex items-center gap-2">
            <i class="fa-solid fa-pen-to-square text-indigo-500"></i> Alterar Canal de Saída
          </h4>

          <form id="updtchannelytb" method="post" class="space-y-6">
            <div>
              <label for="channelId" class="block text-sm font-medium leading-6 text-gray-300 mb-2">ID do Canal de
                Texto</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fa-solid fa-hashtag text-gray-500"></i>
                </div>
                <input type="number" id="channelId" name="channelId" required
                  placeholder="Cole o ID do canal aqui (ex: 123456789...)"
                  class="block w-full rounded-lg bg-gray-800 border-gray-600 pl-10 py-3 text-white placeholder-gray-500 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition-all shadow-inner" />
              </div>
              <p class="mt-2 text-xs text-gray-500">Certifique-se de que o bot tem permissão para enviar mensagens neste
                canal.</p>
            </div>

            <input type="hidden" id="guildId" name="guildId" value="<%= info.id %>" />
            <input type="hidden" id="func" name="func" value="updtyoutube" />

            <div class="flex justify-end pt-4">
              <button type="button" onclick="envdata()"
                class="flex items-center gap-2 justify-center rounded-lg bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white shadow-lg hover:bg-indigo-500 hover:shadow-indigo-500/30 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all transform hover:-translate-y-0.5">
                <i class="fa-solid fa-floppy-disk"></i>
                Salvar Alterações
              </button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>

  <script>
    function exibirMensagemErro(mensagem) {
      const popUp = document.getElementById('mensagemPopUp');

      popUp.innerHTML = `
          <div class="flex items-center bg-red-500/90 text-white px-4 py-3 rounded-lg shadow-lg border border-red-400 backdrop-blur-sm">
            <i class="fas fa-exclamation-circle mr-3"></i>
            <p class="font-medium text-sm">${mensagem}</p>
          </div>
        `;

      popUp.classList.remove('hidden', 'translate-y-[-10px]', 'opacity-0');

      setTimeout(() => {
        popUp.classList.add('translate-y-[-10px]', 'opacity-0');
        setTimeout(() => popUp.classList.add('hidden'), 300);
      }, 3000);
    }

    function envdata() {
      var form = document.getElementById('updtchannelytb');

      if (!form.checkValidity()) {
        exibirMensagemErro('Por favor, preencha todos os campos obrigatórios.');
        return;
      }

      var formData = new FormData(form);
      var dadosFormulario = $("#updtchannelytb").serializeArray();

      // Check for parent function
      if (parent && typeof parent.funcsReload === 'function') {
        parent.funcsReload(dadosFormulario);
      } else {
        console.error("Function parent.funcsReload not found");
      }
    }
  </script>
</body>

</html>