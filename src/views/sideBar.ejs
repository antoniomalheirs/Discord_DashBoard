      .sidebar-icon {
        border-radius: 2.5rem;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        transition: background-color 0.5s cubic-bezier(0.075, 0.82, 0.165, 1),
          border-radius 1s cubic-bezier(0.075, 0.82, 0.165, 1),
          transform 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
      }

      .sidebar-icon:active {
        border: 1px black solid;
      }

      .sidebar-icon:hover {
        background-color: rgb(
          134,
          239,
          172
        ); /* Cor de fundo acinzentada ao passar o mouse */
        border-radius: 0.75rem; /* Arredondamento de borda */
        transform: scale(1.05); /* Aumenta o tamanho ao passar o mouse */
      }

      .sidebar-icon img {
        transition: transform 0.3s ease;
      }

      .sidebar-icon:hover img {
        transform: scale(1);
      }

      .sidebar-icon:hover + .popup {
        display: block;
      }

      .dropdown-selection {
        transition: background-color 1.5s, color 1.5s; /* Adicione a transição */
      }

      .dropdown-selection:hover {
        background-color: rgba(0, 0, 0, 0); /* Altere a cor de fundo no hover */
      }

      .dropdown-selection-text:hover {
        color: #db9292; /* Altere a cor do texto no hover */
      }
    </style>
