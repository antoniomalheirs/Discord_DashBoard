          Configuration.classList.toggle("hidden");
        }

        if (!Chanels.classList.contains("hidden")) {
          Chanels.classList.toggle("hidden");
        }
        if (!Guild.classList.contains("hidden")) {
          Guild.classList.toggle("hidden");
        }
        if (!User.classList.contains("hidden")) {
          User.classList.toggle("hidden");
        }
        if (!Usage.classList.contains("hidden")) {
          Usage.classList.toggle("hidden");
        }
        sidebar.classList.toggle("hidden");
      }

      function toggleDropdown(type) {
        const chevron = document.getElementById(`${type}-chevron`);
        const dropdown = document.getElementById(`${type}-dropdown`);

        dropdown.classList.toggle("hidden");
        chevron.className = dropdown.classList.contains("hidden")
          ? "fas fa-chevron-right text-gray-400"
          : "fas fa-chevron-down text-gray-400";
      }

