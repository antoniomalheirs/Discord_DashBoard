<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .popup {
        display: none;
        position: absolute;
        top: 50%;
        left: 150%;
        transform: translate(-50%, -50%);
        white-space: nowrap;
        padding: 0.5rem;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        border-radius: 0.25rem;
        z-index: 50;
      }

      .sidebar-icon {
        border-radius: 2.5rem;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        transition: background-color 0.5s cubic-bezier(0.075, 0.82, 0.165, 1),
          border-radius 1s cubic-bezier(0.075, 0.82, 0.165, 1),
          transform 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
      }

      .sidebar-icon:active {
        border: 1px black solid;
      }

      .sidebar-icon:hover {
        background-color: rgb(
          134,
          239,
          172
        ); /* Cor de fundo acinzentada ao passar o mouse */
        border-radius: 0.75rem; /* Arredondamento de borda */
        transform: scale(1.05); /* Aumenta o tamanho ao passar o mouse */
      }

      .sidebar-icon img {
        transition: transform 0.3s ease;
      }

      .sidebar-icon:hover img {
        transform: scale(1);
      }

      .sidebar-icon:hover + .popup {
        display: block;
      }

      .dropdown-selection {
        transition: background-color 1.5s, color 1.5s; /* Adicione a transição */
      }

      .dropdown-selection:hover {
        background-color: rgba(0, 0, 0, 0); /* Altere a cor de fundo no hover */
      }

      .dropdown-selection-text:hover {
        color: #db9292; /* Altere a cor do texto no hover */
      }
    </style>
  </head>
  <body>
    <div
      id="sidebar"
      class="fixed top-0 left-0 h-screen w-20 flex flex-col items-center bg-gray-700 dark:bg-gray-900 shadow-lg divide-y-2 divide-green-300"
    >
      <div class="relative group">
        <div
          class="flex justify-center sidebar-icon w-16 h-16 bg-gray-400"
          onclick="handleIconClick('inicio')"
        >
          <img
            src="../public/res/sidebar/fire.png"
            alt="Fire Icon"
            class="w-10 h-10 my-auto"
          />
        </div>
        <div class="popup absolute">Inicio</div>
      </div>
      <div>
        <!-- Repita o mesmo padrão para outros ícones -->
        <div class="relative group">
          <div
            class="flex justify-center sidebar-icon w-16 h-16 bg-gray-400"
            onclick="handleIconClick('funcs')"
          >
            <img
              src="../public/res/sidebar/fire.png"
              alt="Fire Icon"
              class="w-14 h-14 mt-1"
            />
          </div>
          <div class="popup absolute">Funções</div>
        </div>

        <div class="relative group">
          <div
            class="flex justify-center items-center sidebar-icon w-16 h-16 bg-gray-400"
            onclick="handleIconClick('guildata')"
          >
            <img
              src="../public/res/sidebar/database.png"
              alt="Fire Icon"
              class="w-10 h-10 mt-1"
            />
          </div>
          <div class="popup absolute">Dados da Guilda</div>
        </div>

        <div class="relative group">
          <div
            class="flex justify-center sidebar-icon w-16 h-16 bg-gray-400"
            onclick="handleIconClick('guild')"
          >
            <img
              src="../public/res/sidebar/gear2.png"
              alt="Fire Icon"
              class="w-14 h-14 mt-1"
            />
          </div>
          <div class="popup absolute">Info da Guilda</div>
        </div>
      </div>
      <div class="relative group">
        <div
          class="flex justify-center sidebar-icon w-16 h-16 bg-gray-400"
          onclick="handleIconClick('configs')"
        >
          <img
            src="../public/res/sidebar/gear.png"
            alt="Fire Icon"
            class="w-10 h-10 my-auto"
          />
        </div>
        <div class="popup absolute">Configurações</div>
      </div>
      <!-- Repita para outros ícones -->
    </div>
    <div
      id="channel-bar"
      style="z-index: -10"
      class="fixed top-0 left-20 h-screen w-52 flex flex-col items-center bg-gray-600 dark:bg-gray-900 shadow-lg divide-y-2 divide-green-300"
    >
      <div>
        <h5 class="text-xl my-2">Configurações</h5>
      </div>

      <div class="channel-block mx-2 my-2">
        <div class="channel-bar-container">
          <div
            class="dropdown border-discord-light mt-2"
            onclick="toggleDropdown('topics')"
          >
            <div class="dropdown-header">
              <i
                id="topics-chevron"
                class="fas fa-chevron-down text-gray-400"
              ></i>
              <h5
                id="topics-header"
                class="dropdown-header-text text-sm text-blue-600 ml-2"
              >
                Funções de notificação +
              </h5>
            </div>
            <div
              id="topics-dropdown"
              class="dropdown-content hidden ml-4 text-sm"
            >
              <div class="dropdown-selection" onclick="selectTopic('youtube')">
                <i class="fas fa-hashtag text-gray-400"></i>
                <h5 class="dropdown-selection-text">Youtube</h5>
              </div>
              <div class="dropdown-selection" onclick="selectTopic('twitch')">
                <i class="fas fa-hashtag text-gray-400"></i>
                <h5 class="dropdown-selection-text">Twitch</h5>
                <i class="fas fa-hashtag text-gray-400"></i>
              </div>
            </div>
          </div>
          <div
            class="dropdown border-discord-light mt-2"
            onclick="toggleDropdown('moderation')"
          >
            <div class="dropdown-header">
              <i
                id="moderation-chevron"
                class="fas fa-chevron-down text-gray-400"
              ></i>
              <h5
                id="moderation-header"
                class="dropdown-header-text text-sm text-blue-600 ml-2"
              >
                Adicionar canais +
              </h5>
            </div>
            <div
              id="moderation-dropdown"
              class="dropdown-content hidden ml-4 text-sm"
            >
              <div class="dropdown-selection" onclick="selectTopic('youtube')">
                <i class="fas fa-hashtag text-gray-400"></i>
                <h5 class="dropdown-selection-text">Youtube</h5>
              </div>
              <div class="dropdown-selection" onclick="selectTopic('twitch')">
                <i class="fas fa-hashtag text-gray-400"></i>
                <h5 class="dropdown-selection-text">Twitch</h5>
                <i class="fas fa-hashtag text-gray-400"></i>
              </div>
            </div>
          </div>

          <!-- Adicione mais dropdowns conforme necessário -->
        </div>
      </div>
    </div>
    <div
      id="top-bar"
      class="fixed top-0 left-72 right-0 h-12 flex bg-gray-600 dark:bg-gray-900 shadow-lg divide-y-2 divide-green-300"
    >
      <div class="flex items-center ml-4">
        <h5 class="text-xl channel-block-text">Pagina Principal</h5>
      </div>

      <div class="flex items-center ml-auto mr-4">
        <input
          id="searchInput"
          class="search-input w-48"
          type="text"
          placeholder="Search..."
        />
      </div>

      <div class="flex items-center mr-4">
        <div class="relative group">
          <div
            class="flex justify-center sidebar-icon w-8 h-8 bg-purple-400"
            onclick="handleIconClick('gear')"
          >
            <img
              src="../public/res/sidebar/fire.png"
              alt="Fire Icon"
              class="w-7 h-7 my-auto"
            />
          </div>
          <div class="popup absolute" style="top: 150%; left: 50%">Fire</div>
        </div>
      </div>
    </div>

    <script>
      function handleIconClick(icon) {
        console.log(`Clicou no ícone: ${icon}`);
      }

      function toggleDropdown(type) {
        const chevron = document.getElementById(`${type}-chevron`);
        const dropdown = document.getElementById(`${type}-dropdown`);

        dropdown.classList.toggle("hidden");
        chevron.className = dropdown.classList.contains("hidden")
          ? "fas fa-chevron-right text-gray-400"
          : "fas fa-chevron-down text-gray-400";
      }

      function selectTopic(topic) {
        console.log(`Selected topic: ${topic}`);
        // Adicione lógica adicional conforme necessário
      }
    </script>
  </body>
</html>
