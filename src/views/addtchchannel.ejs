<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Adicionar Streamer Twitch</title>
  <link href="../css/cssdir/out.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-transparent min-h-full flex items-start justify-center pt-10">

  <div
    class="bg-gray-800/80 backdrop-blur-md border border-gray-700 p-8 rounded-2xl shadow-2xl w-full max-w-full animate-fade-in-up">
    <div id="mensagemPopUp"
      class="hidden fixed top-5 right-5 z-50 transition-all duration-300 transform translate-y-[-10px] opacity-0"></div>

    <!-- Header -->
    <div class="flex items-center gap-6 mb-8 border-b border-gray-700/50 pb-6">
      <div class="relative group">
        <div
          class="absolute -inset-1 bg-purple-600 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>
        <% if (info.icon && info.icon.indexOf('null')===-1) { %>
          <img src="<%= info.icon %>" alt="Ícone da guilda"
            class="relative w-16 h-16 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
          <% } else { %>
            <img src="/res/serverIcon/nonserverimg.jpg" alt="Ícone padrão"
              class="relative w-16 h-16 rounded-lg object-cover shadow-lg ring-2 ring-gray-700" />
            <% } %>
      </div>
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-white mb-2 flex items-center gap-3">
          <i class="fa-brands fa-twitch text-purple-500"></i>
          Adicionar Streamer
        </h3>
        <p class="text-gray-400 text-sm">Cadastre um novo streamer da Twitch para receber notificações de lives.</p>
      </div>
    </div>

    <!-- Form -->
    <form id="addtchchannel" method="post" class="space-y-6">
      <div class="bg-gray-700/20 border border-gray-600/30 rounded-xl p-6">
        <div>
          <label for="channelId" class="block text-sm font-medium leading-6 text-gray-300 mb-2">Nome do Streamer</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fa-solid fa-user-tag text-gray-500"></i>
            </div>
            <input type="text" id="channelId" name="channelId" required placeholder="Ex: alanzoka"
              class="block w-full rounded-lg bg-gray-800 border-gray-600 pl-10 py-3 text-white placeholder-gray-500 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-all shadow-inner" />
          </div>
          <p class="mt-2 text-xs text-gray-500">Insira o nome de usuário exato do canal na Twitch.</p>
        </div>
      </div>

      <input type="hidden" id="guildId" name="guildId" value="<%= info.id %>" />
      <input type="hidden" id="func" name="func" value="addtwitchch" />

      <div class="flex justify-end pt-2">
        <button type="button" onclick="envdata()"
          class="flex items-center gap-2 justify-center rounded-lg bg-purple-600 px-8 py-3 text-sm font-bold text-white shadow-lg hover:bg-purple-500 hover:shadow-purple-500/30 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600 transition-all transform hover:-translate-y-0.5">
          <i class="fa-solid fa-plus"></i>
          Adicionar Streamer
        </button>
      </div>
    </form>

  </div>

  <!-- Scripts -->
  <script>
    function exibirMensagemErro(mensagem) {
      const popUp = document.getElementById('mensagemPopUp');

      popUp.innerHTML = `
          <div class="flex items-center bg-red-500/90 text-white px-4 py-3 rounded-lg shadow-lg border border-red-400 backdrop-blur-sm">
            <i class="fas fa-exclamation-circle mr-3"></i>
            <p class="font-medium text-sm">${mensagem}</p>
          </div>
        `;

      popUp.classList.remove('hidden', 'translate-y-[-10px]', 'opacity-0');

      setTimeout(() => {
        popUp.classList.add('translate-y-[-10px]', 'opacity-0');
        setTimeout(() => popUp.classList.add('hidden'), 300);
      }, 3000);
    }

    function envdata() {
      var form = document.getElementById('addtchchannel');
      if (!form.checkValidity()) {
        exibirMensagemErro('Por favor, preencha todos os campos obrigatórios.');
        return;
      }
      var formData = new FormData(form);
      var dadosFormulario = $("#addtchchannel").serializeArray();

      if (parent && typeof parent.dtbaseReload === 'function') {
        parent.dtbaseReload(dadosFormulario);
      } else if (parent && typeof parent.funcsReload === 'function') {
        parent.funcsReload(dadosFormulario);
      } else {
        console.error("Function parent.dtbaseReload or funcsReload not found");
      }
    }
  </script>
</body>

</html>