  <!-- SCRIPTS -->
  <script>
    // Load parent data
    try {
      var img = parent.user();
      var email = parent.email();
      var user = parent.username();
      const serverName = parent.guildName();

      document.getElementById("server-name").textContent = serverName;
      document.getElementById("email").textContent = email;
      document.getElementById("userpt").textContent = user;
      document.getElementById("user-avatar-img").src = img;
    } catch (e) {
      console.log("Not loaded inside parent frame or error fetching parent data");
    }

    function handleIconClick(btnId) {
      // Hide all sections
      const sections = ['home', 'functions', 'guildDB', 'serverInfos', 'config'];
      sections.forEach(sec => {
        const sidebar = document.getElementById(`${sec}-sidebar`);
        const hashtag = document.getElementById(`hashtag-${sec}`);
        if (sidebar) sidebar.classList.add('hidden');
        if (hashtag) hashtag.classList.add('hidden');
      });

      // Show selected
      const selectedSidebar = document.getElementById(`${btnId}-sidebar`);
      const selectedHashtag = document.getElementById(`hashtag-${btnId}`);
      if (selectedSidebar) selectedSidebar.classList.remove('hidden');
      if (selectedHashtag) selectedHashtag.classList.remove('hidden');
    }

    function toggleDropdown(dropdownId) {
      const dropdown = document.getElementById(dropdownId + "-dropdown");
      // Simple toggle with a class if using tailwind functionality or inline style
      if (dropdown.classList.contains('hidden')) {
        dropdown.classList.remove('hidden');
      } else {
        dropdown.classList.add('hidden');
      }
    }

    function togglebtnDropdown(btnId) {
      const dropdown = document.getElementById(btnId + "-changeState");
      dropdown.classList.toggle("hidden");
    }

    function selectTopic(topic) {
      console.log("[Sidebar] Selecting topic:", topic);

      if (typeof carregarConteudo === 'function') {
        console.log("[Sidebar] Calling carregarConteudo (local scope)");
        carregarConteudo(topic);
      } else if (window.carregarConteudo && typeof window.carregarConteudo === 'function') {
        console.log("[Sidebar] Calling window.carregarConteudo");
        window.carregarConteudo(topic);
      } else if (parent && typeof parent.carregarConteudo === 'function') {
        console.log("[Sidebar] Calling parent.carregarConteudo");
        parent.carregarConteudo(topic);
      } else {
        console.error("[Sidebar] Critical Error: carregarConteudo function not found in any scope.");
        alert("Erro: Não foi possível carregar a página. A função de navegação não foi encontrada.");
      }
    }
  </script>
