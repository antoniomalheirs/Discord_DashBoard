    <style>
      .popup {
        display: none;
        position: absolute;
        top: 50%;
        left: 150%;
        transform: translate(-50%, -50%);
        white-space: nowrap;
        padding: 0.5rem;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        border-radius: 0.25rem;
        z-index: 50;
      }
      .search-input {
        border-radius: 0.5rem;
        background-color: rgb(156, 163, 175);
        color: rgb(0, 0, 0);
        /* animação de transição para a cor de fundo e transformação */
      }

      .search-input::placeholder {
        outline: none;
        color: rgb(0, 0, 0); /* cor do texto de dica */
      }

      .search-input:hover {
        background-color: rgb(
          134,
          239,
          172
        ); /* cor de fundo ao passar o mouse */
        transform: scale(1.05);
        transition: background-color 1s cubic-bezier(0.075, 0.82, 1, 1),
          /* efeito de escala ao passar o mouse */ transform 0.6s
            cubic-bezier(0.075, 0.82, 0.165, 1);
      }

      .sidebar-icon {
        border-radius: 2rem;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        transition: background-color 0.5s cubic-bezier(0.075, 0.82, 0.165, 1),
          border-radius 1s cubic-bezier(0.075, 0.82, 0.165, 1),
          transform 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
      }

      .sidebar-icon:active {
        border: 1px black solid;
      }

      .sidebar-icon:hover {
        background-color: rgb(
          134,
          239,
          172
        ); /* Cor de fundo acinzentada ao passar o mouse */
        border-radius: 0.75rem; /* Arredondamento de borda */
        transform: scale(1.05); /* Aumenta o tamanho ao passar o mouse */
      }

      .sidebar-icon img {
        transition: transform 0.3s ease;
      }

      .sidebar-icon:hover img {
        transform: scale(1);
      }

      .sidebar-icon:hover + .popup {
        display: block;
      }

      .dropdown-selection {
        transition: background-color 1.5s, color 1.5s; /* Adicione a transição */
      }

      .dropdown-selection:hover {
        background-color: rgba(0, 0, 0, 0); /* Altere a cor de fundo no hover */
      }

      .dropdown-selection-text:hover {
        color: #db9292; /* Altere a cor do texto no hover */
      }
    </style>
