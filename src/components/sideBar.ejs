<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <!-- Adicione os links para os Ã­cones/fontes necessÃ¡rios aqui -->
  <!-- Exemplo com CDN para os Ã­cones do Bootstrap e Font Awesome -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.19.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <title>Vanilla JS Sidebar</title>
</head>
<body>
  <div id="sidebar" class="fixed top-0 left-0 h-screen w-16 flex flex-col bg-white dark:bg-gray-900 shadow-lg">
    <div class="sidebar-icon group" onclick="handleIconClick('fire')" onmouseover="showTooltip('tooltip ðŸ’¡')">
      <i class="bi bi-lightning-fill text-2xl"></i>
      <span class="sidebar-tooltip hidden group-hover:block">tooltip ðŸ’¡</span>
    </div>
    <hr class="sidebar-hr my-2">
    <div class="sidebar-icon group" onclick="handleIconClick('plus')" onmouseover="showTooltip('tooltip ðŸ’¡')">
      <i class="bi bi-plus text-2xl"></i>
      <span class="sidebar-tooltip hidden group-hover:block">tooltip ðŸ’¡</span>
    </div>
    <div class="sidebar-icon group" onclick="handleIconClick('lightning')" onmouseover="showTooltip('tooltip ðŸ’¡')">
      <i class="bi bi-lightning-fill text-lg"></i>
      <span class="sidebar-tooltip hidden group-hover:block">tooltip ðŸ’¡</span>
    </div>
    <div class="sidebar-icon group" onclick="handleIconClick('poo')" onmouseover="showTooltip('tooltip ðŸ’¡')">
      <i class="fa fa-poo text-lg"></i>
      <span class="sidebar-tooltip hidden group-hover:block">tooltip ðŸ’¡</span>
    </div>
    <hr class="sidebar-hr my-2">
    <div class="sidebar-icon group" onclick="handleIconClick('gear')" onmouseover="showTooltip('tooltip ðŸ’¡')">
      <i class="bi bi-gear-fill text-base"></i>
      <span class="sidebar-tooltip hidden group-hover:block">tooltip ðŸ’¡</span>
    </div>
  </div>

  <script>
    function handleIconClick(icon) {
      // LÃ³gica para lidar com o clique no Ã­cone
      console.log(`Clicou no Ã­cone: ${icon}`);
    }

    function showTooltip(text) {
      // LÃ³gica para exibir a dica de ferramenta
      const tooltips = document.querySelectorAll('.sidebar-tooltip');
      tooltips.forEach(tooltip => {
        tooltip.textContent = text;
        tooltip.classList.remove('hidden');
      });
    }
  </script>
</body>
</html>
